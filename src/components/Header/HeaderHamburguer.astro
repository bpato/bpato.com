---
const { text } = Astro.props;
---

<div class="flex lg:hidden">
  <button
    type="button"
    id="open-menu-button"
    class="drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.8)] -m-2.5 inline-flex cursor-pointer items-center justify-center rounded-md p-2.5 text-white transition-all duration-300 will-change-transform hover:scale-150"
  >
    <span class="sr-only">{text}</span>
    <svg
      class="size-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      aria-hidden="true"
      data-slot="icon"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
    </svg>
  </button>
</div>
