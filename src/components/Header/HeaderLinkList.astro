---
import HeaderLink from "@/components/Header/HeaderLink.astro";
import Logo, { type Props as IconProps } from "@/assets/Logo.astro";

const iconProps: IconProps = {
  height: "18pt",
  width: "18pt",
};

const { device } = Astro.props;
---

<HeaderLink href="/" text="" {device}>
  <Logo {...iconProps} slot="before-text" />
</HeaderLink>
<HeaderLink text="About" href="/about" {device} />
<HeaderLink text="Blog" href="/blog" {device} />
